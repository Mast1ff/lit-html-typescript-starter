{
    "compilerOptions": {
        "typeRoots": ["src/@types"],
        "baseUrl": "./",
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "lib": ["dom", "es2017"],
        "module": "ES2015",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2017",
        "plugins": [
            {
                "name": "typescript-lit-html-plugin"
            }
        ],
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx"]
}