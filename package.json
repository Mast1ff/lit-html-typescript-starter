{
    "name": "lpsample",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "webpack:dev": "set NODE_ENV=development&& npx webpack -w",
        "webpack:build": "set NODE_ENV=production&& npx webpack",
        "scss:dev": "set NODE_ENV=development&& npx gulp sass:watch",
        "scss:build": "set NODE_ENV=production&& npx gulp sass",
        "dev": "concurrently --kill-others \"yarn webpack:dev\" \"yarn scss:dev\"",
        "build": "yarn webpack:build && yarn scss:build"
    },
    "dependencies": {
        "lit-html": "^1.3.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "autoprefixer": "^10.0.1",
        "concurrently": "^5.3.0",
        "eslint": "^7.13.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.22.1",
        "gulp": "^4.0.2",
        "gulp-postcss": "^9.0.0",
        "gulp-sass": "^4.1.0",
        "html-webpack-plugin": "^4.5.0",
        "postcss": "^8.1.6",
        "ts-loader": "^8.0.11",
        "tsconfig-paths-webpack-plugin": "^3.3.0",
        "typescript": "^4.0.5",
        "typescript-lit-html-plugin": "^0.9.0",
        "webpack": "^5.4.0",
        "webpack-cli": "^4.2.0"
    }
}
